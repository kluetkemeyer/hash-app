<?xml version="1.0" encoding="UTF-8" ?>
<widget 
		xmlns   = "http://www.w3.org/ns/widgets"
		xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "com.phonegap.example"
		versionCode = "10" 
		version     = "1.0.0" >

    <name>Holsteiner Arschloch</name>

    <description>
        App zum Spielen des Kartenspiels: Holsteiner-Arschloch 
    </description>

    <author	
			href="http://luetkemeyer.com/kilian" 
			email="kilian@luetkemeyer.com">
        Kilian LÃ¼tkemeyer
    </author>

	<!-- limit app to Android -->
	<gap:platform 
			name="android" />
	
	
	<!-- define slash screens -->
	<gap:splash	
			src="res/screen/android/screen-ldpi-landscape.png"
			gap:platform="android"
			gap:density="ldpi" />
	<gap:splash	
			src="res/screen/android/screen-mdpi-landscape.png"
			gap:platform="android"
			gap:density="mdpi" />
	<gap:splash	
			src="res/screen/android/screen-hdpi-landscape.png"
			gap:platform="android"
			gap:density="hdpi" />
	<gap:splash	
			src="res/screen/android/screen-xhdpi-landscape.png"
			gap:platform="android"
			gap:density="xhdpi" />
			
	<gap:plugin 
			name="SocketPlugin" 
			value="de.brainiiiii.phonegap.plugin.socket.SocketPlugin" />
</widget>
